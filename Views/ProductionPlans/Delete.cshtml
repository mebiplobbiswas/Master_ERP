@model MASERP.Models.DATAMODEL.ProductionPlan
@{
    
    ViewBag.page = "production";
}
<h2>Plan Details</h2>
<table class="table">
    <tr><th>Plan Name</th><td>@Model.PlanName</td></tr>
    <tr><th>Start Date</th><td>@Model.StartDate.ToString("yyyy-MM-dd")</td></tr>
    <tr><th>End Date</th><td>@Model.EndDate.ToString("yyyy-MM-dd")</td></tr>
    <tr><th>Remarks</th><td>@Model.Remarks</td></tr>
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductionPlanId }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>
