@model IEnumerable<MASERP.Models.ApplicationUser>

@{
    ViewBag.Title = "User List";
    var i = 1;
}



<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5> <a class="pull-left" href="#">All User List</a></h5>
            <a class="btn btn-sm btn-success  pull-right" href="/UsersAdmin/create">Add New User </a>
        </div>
        <hr />
        <div class="table-responsive">
            <table class="display" id="tbl">
                <thead style="text-align:center; font-size:15px;">
                    <tr>
                        <th>Sl</th>
                        <th>ZoneID</th>
                        <th>Branch</th>
                        <th>Staff ID</th>
                        <th>Employee Name</th>
                        <th>Area Code</th>
                        <th>Email</th>
                        <th>User Status</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center; width: 80px;">@i</td>
                            @if (item.Email == "admin@mail.com")
                            {
                                <td>
                                    <div class="btn btn-sm btn-primary">
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </div>
                                </td>
                                <td></td>
                                <td></td>
                            }
                            else
                            {
                                <td style="text-align:center; width:80px; font-size:15px; font-family:Verdana">
                                    @Html.DisplayFor(modelItem => item.ZoneID)
                                </td>
                                <td style="text-align: center; width: 80px; font-size: 15px; font-family: Verdana">
                                    @Html.DisplayFor(modelItem => item.BranchCode)
                                </td>

                                <td style="text-align: center; width: 100px;">
                                    @Html.DisplayFor(modelItem => item.StaffID)
                                </td>
                                <td style="width: 400px; font-size: 15px; font-family: Verdana ">
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td style="text-align: center; width: 200px;">
                                    @Html.DisplayFor(modelItem => item.AreaCode)
                                </td>

                                <td style="width: 230px; font-size: 15px; font-family: Verdana ">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>

                                <td style="text-align:center; width:230px;">
                                    @Html.DisplayFor(modelItem => item.LockoutEnabled)
                                </td>

                            }

                            <td style="text-align:center; width:300px;">
                                <a href="@Url.Action("Details", "UsersAdmin", new { id = item.Id })" class="btn btn-primary">View </a>
                                <a href="@Url.Action("Edit", "UsersAdmin", new { id = item.Id })" class="btn btn-warning">Edit </a>
                                <a href="@Url.Action("Delete", "UsersAdmin", new { id = item.Id })" class="btn btn-danger">Delete </a>
                            </td>

                        </tr>
                        i++;
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/Common.js"></script>
    <script>
        var tbl = $('#tbl').DataTable({
        });
    </script>
} 