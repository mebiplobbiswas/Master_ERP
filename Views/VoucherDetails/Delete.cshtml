@model MASERP.Models.DATAMODEL.VoucherDetail

@{
    ViewBag.Title = "Delete Voucher Detail";
    ViewBag.page = "sales";
}

<h2 class="mb-4 text-danger font-weight-bold border-bottom pb-2">
    🗑️ Delete Voucher Detail
</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this Voucher Detail?</strong>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">Voucher No</dt>
            <dd class="col-sm-9">@Model.Voucher.VoucherNo</dd>

            <dt class="col-sm-3 font-weight-bold">Account Head</dt>
            <dd class="col-sm-9">@Model.AccountHead.HeadName</dd>

            <dt class="col-sm-3 font-weight-bold">Debit Amount</dt>
            <dd class="col-sm-9 text-success">@Model.Debit?.ToString("N2")</dd>

            <dt class="col-sm-3 font-weight-bold">Credit Amount</dt>
            <dd class="col-sm-9 text-danger">@Model.Credit?.ToString("N2")</dd>

            <dt class="col-sm-3 font-weight-bold">Narration</dt>
            <dd class="col-sm-9">@Model.Narration</dd>
        </dl>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.VoucherDetailId)

    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i> Confirm Delete
    </button>
    <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">
        <i class="fas fa-arrow-left"></i> Cancel
    </a>
}
