@model MASERP.Models.DATAMODEL.VoucherDetail

@{
    ViewBag.Title = "Edit Voucher Detail";
    ViewBag.page = "sales";
}

<h2 class="mb-4 text-primary font-weight-bold border-bottom pb-2">
    ✏️ Edit Voucher Detail
</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.VoucherDetailId)

    <div class="card shadow-sm">
        <div class="card-body">

            <div class="form-group row">
                @Html.LabelFor(model => model.VoucherId, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-5">
                    @Html.DropDownList("VoucherId", null, "-- Select Voucher --", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.AccountHeadId, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-5">
                    @Html.DropDownList("AccountHeadId", null, "-- Select Account Head --", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Debit, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.Debit, new { @class = "form-control", type = "number", step = "0.01" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Credit, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.Credit, new { @class = "form-control", type = "number", step = "0.01" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Narration, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-5">
                    @Html.TextAreaFor(model => model.Narration, new { @class = "form-control", rows = 3 })
                </div>
            </div>
        </div>

        <div class="card-footer text-left">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Update
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
}
