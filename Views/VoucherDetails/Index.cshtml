@model IEnumerable<MASERP.Models.DATAMODEL.VoucherDetail>

@{
    ViewBag.Title = "Voucher Details";
    ViewBag.page = "sales";
    var i = 1;
}

<div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
    <h3 class="text-primary font-weight-bold">📑 Voucher Details List</h3>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> Add Detail
    </a>
</div>

<form method="get" class="form-inline mb-3">
    <input type="text" name="searchTerm" class="form-control mr-2" placeholder="Search by Voucher No or Head..." value="@Request.QueryString["searchTerm"]" />
    <button type="submit" class="btn btn-primary">Search</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">Reset</a>
</form>

<table class="table table-bordered table-hover table-striped">
    <thead class="bg-dark text-white">
        <tr>
            <th>SN</th>
            <th>Voucher No</th>
            <th>Account Head</th>
            <th>Debit (৳)</th>
            <th>Credit (৳)</th>
            <th>Narration</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@item.Voucher.VoucherNo</td>
                <td>@item.AccountHead.HeadName</td>
                <td>@String.Format("{0:N2}", item.Debit)</td>
                <td>@String.Format("{0:N2}", item.Credit)</td>
                <td>@item.Narration</td>
                <td class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.VoucherDetailId }, new { @class = "btn btn-sm btn-warning mr-1" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.VoucherDetailId }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>
