@model MASERP.Models.DATAMODEL.WorkOrderMaterial

@{
    ViewBag.Title = "Delete Work Order Material";
    ViewBag.page = "production";
}

<h3>Delete Confirmation</h3>

<div class="alert alert-danger mt-3">
    Are you sure you want to delete this material?
</div>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Work Order No</dt>
            <dd class="col-sm-9">@Model.WorkOrder?.WorkOrderNo</dd>

            <dt class="col-sm-3">Material Name</dt>
            <dd class="col-sm-9">@Model.MaterialName</dd>

            <dt class="col-sm-3">Required Quantity</dt>
            <dd class="col-sm-9">@Model.RequiredQuantity</dd>

            <dt class="col-sm-3">Unit</dt>
            <dd class="col-sm-9">@Model.Unit</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.WorkOrderMaterialId)

            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">Cancel</a>
        }
    </div>
</div>
