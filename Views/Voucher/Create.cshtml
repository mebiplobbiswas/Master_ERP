@model MASERP.Models.DATAMODEL.Voucher

@{
    ViewBag.Title = "Create Voucher";
    ViewBag.page = "sales";
}

<h2 class="mb-4 text-success font-weight-bold border-bottom pb-2 text-center">
    ➕ Create New Voucher
</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="card shadow-sm">
    <div class="card-body">
        <div class="form-group row">
            @Html.LabelFor(model => model.VoucherNo, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
            <div class="col-sm-5">
                @Html.TextBoxFor(model => model.VoucherNo, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VoucherNo, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.VoucherType, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
            <div class="col-sm-5">
                @Html.DropDownListFor(model => model.VoucherType, new SelectList(new[] { "Journal", "Payment", "Receipt", "Contra" }),
     "-- Select Type --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VoucherType, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.VoucherDate, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
            <div class="col-sm-5">
                @Html.TextBoxFor(model => model.VoucherDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.VoucherDate, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
            <div class="col-sm-5">
                @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control", rows = 3 })
            </div>

        </div>
    </div>
    <div class="card-footer text-left">
        <button type="submit" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Save
        </button>
        <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
    
</div>
}
