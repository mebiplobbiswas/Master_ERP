@model MASERP.Models.DATAMODEL.WorkOrder

@{
    var companyInfo = (MASERP.Models.DATAMODEL.CompanyInfo)ViewBag.CompanyInfo;
    Layout = null; // No layout for clean print page
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Work Order Print</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 2cm; }
        header { text-align: center; margin-bottom: 2rem; }
        header img { max-height: 80px; margin-bottom: 10px; }
        header h1 { margin: 0; font-size: 1.8rem; }
        header p { margin: 0; font-size: 0.9rem; color: #555; }

        dl { width: 60%; margin: auto; }
        dt { font-weight: bold; margin-top: 10px; }
        dd { margin-left: 1rem; margin-bottom: 10px; }

        .media print {
            button { display: none; }
            body { margin: 0; }
        }

        .print-btn {
            display: block;
            margin: 1rem auto;
            padding: 10px 30px;
            font-size: 1rem;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header>
        <img src="@Url.Content(companyInfo.LogoUrl)" alt="Company Logo" />
        <h1>@companyInfo.Name</h1>
        <p>@companyInfo.Address</p>
        <p>Phone: @companyInfo.ContactNumber | Email: @companyInfo.Email</p>
        <hr />
    </header>

    <section>
        <dl>
            <dt>Work Order No:</dt>
            <dd>@Model.WorkOrderNo</dd>

            <dt>Production Plan:</dt>
            <dd>@Model.ProductionPlan.PlanName</dd>

            <dt>Issue Date:</dt>
            <dd>@Model.IssueDate.ToString("yyyy-MM-dd")</dd>

            <dt>Item Name:</dt>
            <dd>@Model.ItemName</dd>

            <dt>Quantity:</dt>
            <dd>@Model.Quantity</dd>

            <dt>Status:</dt>
            <dd>@Model.Status</dd>
        </dl>
    </section>
    <button onclick="window.open('@Url.Action("Print", "WorkOrders", new { id = Model.WorkOrderId })', '_blank')" class="btn btn-primary">
        <i class="fas fa-print"></i> Print
    </button>

    @*<button class="print-btn" onclick="window.print()">🖨️ Print Now</button>*@
</body>
</html>
