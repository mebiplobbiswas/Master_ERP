@model MASERP.Models.DATAMODEL.WorkOrder

@{
    ViewBag.Title = "Work Order Details";
    ViewBag.page = "production";
    var companyInfo = new MASERP.Models.DATAMODEL.CompanyInfo(); // Instantiate here or pass from controller
}

<h2 class="mb-4 border-bottom pb-2 font-weight-bold">
    Work Order Details
</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">Work Order No:</dt>
            <dd class="col-sm-9">@Model.WorkOrderNo</dd>

            <dt class="col-sm-3 font-weight-bold">Production Plan:</dt>
            <dd class="col-sm-9">@Model.ProductionPlan.PlanName</dd>

            <dt class="col-sm-3 font-weight-bold">Issue Date:</dt>
            <dd class="col-sm-9">@Model.IssueDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3 font-weight-bold">Item Name:</dt>
            <dd class="col-sm-9">@Model.ItemName</dd>

            <dt class="col-sm-3 font-weight-bold">Quantity:</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>

            <dt class="col-sm-3 font-weight-bold">Status:</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
    </div>

    <div class="card-footer text-right">
        <a href="@Url.Action("Index")" class="btn btn-secondary mr-2">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>

        <button onclick="window.open('@Url.Action("Print", "WorkOrders", new { id = Model.WorkOrderId })', '_blank')" class="btn btn-primary">
            <i class="fas fa-print"></i> Print
        </button>
    </div>
</div>
