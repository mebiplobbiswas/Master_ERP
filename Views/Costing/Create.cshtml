@model MASERP.Models.DATAMODEL.Costing
@{
    ViewBag.Title = "Create Costing";
  
}




<div class="header bg-primary-grey pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0"> Buyer</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="@Url.Content("~/Home/Index")"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="@Url.Content("~/Costing/Create")">Costing</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="@Url.Content("~/Costing/Index")" class="btn btn-md btn-default">List</a>
                </div>
            </div>
        </div>
    </div>
</div>







<div class="container col-md-6 mt--6">
    <div class="row justify-content-center">
        <div class=" col ">
            <div class="card">
                <div class="card-header bg-transparent">
                    <h3 class="mb-0">Add New Costing</h3>
                </div>
                <div class="card-body">
                    <div>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.OrderId)
                                    @Html.DropDownList("OrderId", null, htmlAttributes: new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.FabricCost)
                                    @Html.EditorFor(model => model.FabricCost, new { htmlAttributes = new { @class = "form-control" } })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.AccessoriesCost)
                                    @Html.EditorFor(model => model.AccessoriesCost, new { htmlAttributes = new { @class = "form-control" } })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.LaborCost)
                                    @Html.EditorFor(model => model.LaborCost, new { htmlAttributes = new { @class = "form-control" } })
                                </div>

                                <input type="submit" value="Create" class="btn btn-success" />
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>


</div>