@model MASERP.Models.DATAMODEL.AccountHead
@{
    ViewBag.Title = "Delete Account Head";
    ViewBag.page = "sales";
}

<h3 class="text-danger">Are you sure you want to delete this?</h3>
<table class="table table-bordered">
    <tr><th>Head Name</th><td>@Model.HeadName</td></tr>
    <tr><th>Head Type</th><td>@Model.HeadType</td></tr>
    <tr><th>Description</th><td>@Model.Description</td></tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">Cancel</a>
}
