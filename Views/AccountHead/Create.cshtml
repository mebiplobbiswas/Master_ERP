@model MASERP.Models.DATAMODEL.AccountHead
@{
    ViewBag.Title = Model.AccountHeadId == 0 ? "Create Account Head" : "Edit Account Head";
    ViewBag.page = "sales";
}


<h2 class="mb-4 text-success font-weight-bold border-bottom pb-2 text-center">
    ➕ @ViewBag.Title
</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.AccountHeadId)

<div class="card shadow-sm">
    <div class="card-body">

        <div class="form-group row">
            @Html.LabelFor(model => model.HeadName, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
            <div class="col-sm-5">
                @Html.TextBoxFor(m => m.HeadName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.HeadName, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.HeadType, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.HeadType, new SelectList(new[] { "Asset", "Liability", "Income", "Expense" }), "-- Select Head Type --", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.HeadType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
            <div class="col-sm-5">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
            </div>
        </div>

    </div>

    <div class="card-footer text-center">
        <button type="submit" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Save
        </button>
        <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    @*<button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">Back to List</a>*@

</div>
}
