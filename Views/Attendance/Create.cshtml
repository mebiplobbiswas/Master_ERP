@model MASERP.Models.DATAMODEL.Attendance
@{
    ViewBag.Title = "Add Attendance";
    ViewBag.page ="supplier";
}



<div class="header bg-primary-grey pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0"> Buyer</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="@Url.Content("~/Home/Index")"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="@Url.Content("~/Attendance/Index")">Attendance</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="@Url.Content("~/Attendance/Index")" class="btn btn-md btn-default">List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container col-md-6 mt--6">
    <div class="row justify-content-center">
        <div class=" col ">
            <div class="card">
                <div class="card-header bg-transparent">
                    <h3 class="mb-0">Add Attendance</h3>
                </div>
                <div class="card-body">
                    <div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.LabelFor(m => m.EmployeeId)
                                @Html.DropDownList("EmployeeId", null, "Select Employee", new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.EmployeeId, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Date)
                                @*@Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })*@
                                @Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })

                                @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group form-check">
                                @Html.CheckBoxFor(m => m.IsPresent, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.IsPresent, new { @class = "form-check-label" })
                            </div>

                            <button type="submit" class="btn btn-success btn-sm">Save</button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">Back</a>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



